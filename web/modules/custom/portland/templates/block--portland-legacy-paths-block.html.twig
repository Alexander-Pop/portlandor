{#
/**
 * @file
 * Portland legacy paths custom block.
 */
#}
{% if legacy_paths %}
<details data-drupal-selector="view-legacy-paths" id="view-legacy-paths" class="js-form-wrapper form-wrapper">
   <summary role="button" aria-controls="view-legacy-paths" aria-expanded="true" aria-pressed="true">Legacy paths from portlandoregon.gov</summary>
	<div class="details-wrapper">
      <div class="legacy-path-block">
         <div class="description">
            <p>{{ help_text }}</p>
         </div>
         <div class="legacy-paths">
            {% for path in legacy_paths %}
               <div class="legacy-path">
                  <a href="{{ pog_base_url }}{{ path }}" target="_blank">{{ path }}</a>
               </div>
            {% endfor %}
         </div>
      </div>
	</div>
</details>
{% endif %}