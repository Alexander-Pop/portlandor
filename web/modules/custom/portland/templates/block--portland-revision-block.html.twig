{% if current_revision_state %}
  <div class="portland-revision--block message message-{{ alert_color }} border border-{{ alert_color }} mt-3">
    {# <h1>{{ title }}</h1> #}
    <span class="fas fa-lg fa-{{ alert_icon }} fa-fw"></span>
    <strong>{{ current_revision_state }}</strong> {{ latest_revision_state }}
    <div class="float-right"><a href="{{ revision_link }}">{{ revision_link_text }}</a></div>
  </div>
{% endif %}
