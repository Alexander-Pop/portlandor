<div class="d-flex flex-column align-items-start mb-4">
  <h3 class="order-2">
    <a href="{{ url }}" rel="bookmark">
      {{ label }}</a>
  </h3>
  {% if content.field_summary %}
    <div class="order-3">
      <p>{{ content.field_summary.0 }}</p>
    </div>
  {% endif %}
  {% if group.type.entity.label %}
    <a class="badge badge-pill badge-light mb-1 order-1 align-self-start">
      <span class="sr-only">Type is</span>
      {% if content.field_group_type %} 
        {{ content.field_group_type.0 }} 
      {% else %}
        {{ group.type.entity.label }}
      {% endif %}</a>
  {% endif %}
</div>
