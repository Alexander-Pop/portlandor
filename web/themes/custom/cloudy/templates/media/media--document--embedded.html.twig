{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *embed
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% embed 'media.html.twig' with {
  'margin' : '0'
}%}
  {% spaceless %}
    {% block status %}
      {% set badge_classes = badge_classes|merge(['d-inline-block', 'mr-2']) %}
      {{ parent() }}
    {% endblock %}
    {% block content %}
      <div class="flex items-center">
        {{ content }}
      </div>
    {% endblock %}
  {% endspaceless %}
{% endembed %}
