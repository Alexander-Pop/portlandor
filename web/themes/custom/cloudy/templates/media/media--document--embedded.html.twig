{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *embed
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% embed 'media.html.twig' with {
  'margin' : '0'
}%}
  {% spaceless %}
    {% block status %}
      {% set badge_classes = badge_classes|merge(['d-inline-block', 'mr-2']) %}
      {{ parent() }}
    {% endblock %}
    {% block content %}
      {% set icon = file_icon_markup(media.field_mime_type.0.value) %}
      {% set fileSize = file_size_string(media.field_file_size.0.value) %}
      <a href="{{ fileURL }}">{{ icon|raw }}{{ name }}</a>
      {{ fileSize }}
    {% endblock %}
  {% endspaceless %}
{% endembed %}
