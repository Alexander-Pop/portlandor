{% extends 'paragraph.html.twig' %}
{% block content %}
{# drawing document properties directly from paragraph object bypasses permissions checks, so
   we need to check the content of the field in the content object before displaying it #}

{% set size = file_size_string(paragraph.field_document.entity.field_document.entity.getSize()) %}
{% set icon = file_icon_markup(paragraph.field_document.entity.field_document.entity.getMimeType()) %}
{% set url = file_url(paragraph.field_document.entity.field_document.entity.getFileUri()) %}

{% if (content.field_document.0) %}
<a href="{{ url }}">
{{ icon|raw }} {{ paragraph.field_document.entity.getName() }}
</a> {{ size }}
{% endif %}
{% endblock %}
