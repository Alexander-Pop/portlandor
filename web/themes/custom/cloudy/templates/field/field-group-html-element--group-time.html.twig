{% embed "field-group-html-element.html.twig" with {
  'margin': '2'
} %}
  {% set display_time = element["field_all_day"]|render %}
  {% set start_time = element["field_start_time"]|render %}
  {% set end_time = element["field_end_time"]|render %}
  {% block group %}
    {% if field_all_day.value or field_start_time.value %}
      {{ parent() }}
    {% endif %}
  {% endblock %}
  {% block content %}
    <span class="flex items-center">
      {% if field_all_day.value %}
        {{ display_time }}
      {% elseif field_start_time.value and field_end_time.value %}
        {{ start_time }}
        <span class="mx-1">{{ 'to'|t }}</span>
        {{ end_time }}
      {% else %}
        {{ start_time }}
      {% endif %}
    </span>
  {% endblock %}
{% endembed %}
