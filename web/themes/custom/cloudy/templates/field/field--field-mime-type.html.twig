{% set icon_map = {
  'application/pdf': 'fa-file-pdf',
  'application/msword': 'fa-file-word',
  'application/vnd.openxmlformats-officedocument.wordprocessingml.document': 'fa-file-word',
  'text/plain': 'fa-file-alt',
} %}
{% embed 'field.html.twig' with {
    'margin' : '0',
    'item_classes': [
      'mr-2',
      'fas'
    ]
  } %}
  {% spaceless %}
    {% block content %}
      {%- for item in items if item.content|render|striptags|trim is not empty -%}
        {% set icon_class = icon_map[item.content['#context']['value']] %}
        <i{{ item.attributes.addClass(item_classes).addClass(icon_class) }} />
      {%- endfor -%}
    {% endblock %}
  {% endspaceless %}
{% endembed %}
