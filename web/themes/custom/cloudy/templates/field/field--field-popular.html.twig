{% embed 'field.html.twig' with {
    'margin' : '0'
  } %}
  {% spaceless %}
    {% block content %}
      {%- for item in element['#items'] if item.getValue()['value'] == 1 -%}
        <span class="badge badge-dark my-1 p-1">
          {% trans %}Popular{% endtrans %}
        </span>
      {%- endfor -%}
    {% endblock %}
  {% endspaceless %}
{% endembed %}
