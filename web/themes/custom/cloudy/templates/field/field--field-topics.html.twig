{% embed "field.html.twig" with {
  'margin': '2'
} %}
  {% block field %}
    {% set field_classes = field_classes|merge(['align-items-baseline']) %}
    {{ parent() }}
  {% endblock %}
  {% block label %}
    {% set title_classes = title_classes|merge(['mb-0']) %}
    {{ parent() }}
  {% endblock %}
  {% block content %}
    {% set item_classes = item_classes|merge(['mb-2']) %}
    {{ parent() }}
  {% endblock %}
{% endembed %}