{#
/**
 * @file
 * Override of the teaser display of a location.
 *
 */
#}
<div class="location">
  <div class="location--title">{{ label }}</div>
  {% if node.field_address_or_entrance.address_line1 %}
    {{ node.field_address_or_entrance.address_line1 }} <br>
  {% endif %}
  {% if node.field_address_or_entrance.address_line2 %}
    {{ node.field_address_or_entrance.address_line2 }} <br>
  {% endif %}
  {% if node.field_address_or_entrance.dependent_locality.code %}
    {{ node.field_address_or_entrance.dependent_locality.code }} <br>
  {% endif %}
  {% if node.field_address_or_entrance.locality.code or postal_code or administrative_area.code %}
    {{ node.field_address_or_entrance.locality.code }} {{ node.field_address_or_entrance.postal_code }} {{ node.field_address_or_entrance.administrative_area.code }} <br>
  {% endif %}
  {% if node.field_address_or_entrance.country.name and node.field_address_or_entrance.country.name != "United States" %}
    {{ node.field_address_or_entrance.country.name }}
  {% endif %}
  {% if field_geolocation is empty %}
    <div class="get-directions-link"><a href="https://www.google.com/maps/dir//{{ field_address_or_entrance }}" target="_blank">Get Directions</a></div>
  {% else %}
    <div class="get-directions-link"><a href="https://www.google.com/maps/dir//{{ field_geolocation }}" target="_blank">Get Directions</a></div>
  {% endif %}
</div>
