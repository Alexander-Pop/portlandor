{% embed "@layouts/two-column.twig" with {
  "row_classes": [
    "flex-col",
    "md:flex-row",
    "mb-8",
    "-mx-2"
  ],
  "left_classes": [
    "md:w-3/4",
    "my-2",
    "px-2"
  ],
  "right_classes": [
    "md:w-1/4",
    "my-2",
    "px-2"
  ]
} %}
  {% block left %}
    {{ top_left }}
  {% endblock %}
  {% block right %}
    {{ top_right }}
  {% endblock %}
{% endembed %}
{% embed "@layouts/three-column.twig" with {
  "row_classes": [
    "flex-col",
    "md:flex-row",
    "mb-8",
    "-mx-2"
  ]
} %}
  {% block left %}
    {{ center_left }}
  {% endblock %}
  {% block center %}
    {{ center_center }}
  {% endblock %}
  {% block right %}
    {{ center_right }}
  {% endblock %}
{% endembed %}
{% embed "@layouts/one-column.twig" with {
  "row_classes": [
    "mb-8",
    "-mx-2"
  ]
} %}
  {% block center %}
    {{ bottom_center }}
  {% endblock %}
{% endembed %}
