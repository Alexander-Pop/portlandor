{% set classes = classes|default([
    'sidebar-wrapper',
    'col-lg-3'
  ])
%}

{% set drawer_attribute = create_attribute() %}
{% set drawer_classes = drawer_classes|default([
    'drawer-head',
    'border-bottom',
    'd-flex',
    'justify-content-end',
    'mb-3',
    'p-2',
    'd-lg-none'
  ])
%}

{% set overlay_attribute = create_attribute() %}
{% set overlay_classes = overlay_classes|default([
    'overlay',
    'd-lg-none'
  ])
%}

{% if content %}
  {% spaceless %}
    <div {{ attributes.addClass(classes)}} id="sidebar-right" aria-labelledby="btn-open">
      <div {{ drawer_attribute.addClass(drawer_classes) }}>
        <button
          role="button"
          id="btn-close"
          class="btn btn-sm btn-close text-dark text-uppercase"
          data-toggle="class"
          data-target="#sidebar-right, .overlay"
          data-classes="is-active"
          aria-controls="sidebar-right"
          aria-pressed="false"
          aria-expanded="false"
          aria-label="{{ 'Close filters'|t }}">
          <i class="fas fa-times"></i>
          <span>{{ 'Close'|t }}</span>
        </button>
      </div>
      {{ content }}
    </div>
    <div {{ overlay_attribute.addClass(overlay_classes) }}></div>
  {% endspaceless %}
{% endif %}
