{%
  set types = [
    { name: 'default', status: 'default', color: 'Gray', description: 'general, neutral, balanced, emotionless', uses: 'to-do, unavailable, minor, not started' },
    { name: 'information', status: 'info', color: 'Blue', description: 'depth, sincerity, wisdom, confidence, stability, intelligence', uses: 'information, active, in-process' },
    { name: 'success', status: 'success', color: 'Green', description: 'life, renewal, nature, energy, growth, harmony, freshness, safety, environment, money', uses: 'available, done, completed, approved, resolved, added' },
    { name: 'warning', status: 'warning', color: 'Yellow', description: 'requires attention, helps activate the memory, encourage communication, build confidence, stimulate', uses: 'busy, blocking, missing, warning' },
    { name: 'danger', status: 'danger', color: 'Red', description: 'assertive, problematic, determined, energetic, powerful, enthusiastic, aggressive', uses: 'error, decline, fail, remove, critical' },
  ]
%}

<div>
  <table class="table">
    <thead>
      <tr>
        <th>Subtle</th>
        <th>Bold</th>
        <th>Color</th>
        <th>Description</th>
        <th>Uses</th>
      </tr>
    </thead>
    <tbody>
      {% for type in types %}
        <tr>
          <td>
            {% include "@components/badge/badge.twig" with {
              text: type.name,
              type: type.status,
            } only %}
          </td>
          <td>
            {% include "@components/badge/badge.twig" with {
              text: type.name,
              type: type.status,
              is_bold: true,
            } only %}
          </td>
          <td>{{ type.color }}</td>
          <td>{{ type.description }}</td>
          <td>{{ type.uses }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
