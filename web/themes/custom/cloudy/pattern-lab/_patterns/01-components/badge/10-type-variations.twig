{# Show all possible variations from changing a SINGLE variable #}

{% set types = ['success', 'danger', 'warning', 'info', 'light', 'dark'] %}

{% for type in types %}
  <div>
    <h6>Type: <code>{{ type }}</code> badge</h6>
    {% include "@components/badge/badge.twig" with {
      "text": "example",
      "type": type,
    } only %}
  </div>
{% endfor %}

{% for type in types %}
  <div>
    <h6>Type: <code>{{ type }}</code> pill badge</h6>
    {% include "@components/badge/badge.twig" with {
      "text": "example",
      "type": type,
      "isPill": true,
    } only %}
  </div>
{% endfor %}

