{% set type = type|default('primary') %}
{% set classes = [
  'council-agenda-item',
  'council-agenda-item--type-' ~ type,
] %}

<div class="{{ classes | join(' ') }}">
  <h3>
    {% if number %}<span class="council-agenda-item__number">Agenda Item {{ number }}</span> {% endif %}
    {% if type %}<span class="council-agenda-item__type">{{ type }}</span> {% endif %}
    {% if status %}<span class="council-agenda-item__status">{{ status }}</span> {% endif %}
  </h3>
  {% if time_certain %}
    <p class="council-agenda-item__time_certain">Time Certain: {{ time_certain }}{% if time_requested %} <span class="council-agenda-item__time_requested">Time Requested: {{ time_requested }}</span>{% endif %}</p>
  {% endif %}
  {% if note %}<p class="council-agenda-item__note">{{ note }}</p>{% endif %}
  {% if disposition %}<p class="council-agenda-item__disposition">{{ disposition }}</p>{% endif %}
  {% if council_document %}{{ council_document }}{% endif %}
  {% if votes %}{{ votes }}{% endif %}
</div>
