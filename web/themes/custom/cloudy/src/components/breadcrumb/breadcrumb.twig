<nav class="cloudy-breadcrumb" role="navigation" aria-label="breadcrumb">
  <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
  <ol class="cloudy-breadcrumb__list">
  {% for item in breadcrumb %}
    {% if item.url %}
      <li class="cloudy-breadcrumb__item">
        <a href="{{ item.url }}">{{ item.text }}</a>
      </li>
    {% else %}
      <li class="cloudy-breadcrumb__item cloudy-breadcrumb__item--active">
        {{ item.text }}
      </li>
    {% endif %}
  {% endfor %}
  </ol>
</nav>