{# CLASSES #}
{% set classes = [
  'morsel',
  is_draft ? 'morsel--is-draft',
  image ? 'morsel--image-featured',
  updated_on ? 'morsel--updated',
] %}
{# TWIG #}
<div class="{{ classes|join(' ') }}">
  <div class="morsel__image">
    <div class="morsel__image-inner">
      {{ image }}
    </div>
  </div>
  <div class="morsel__body">
    {% if is_draft %}
      {% include "@components/badge/badge.twig" with {
        text: "unpublished",
        type: "danger",
        classes: ['mb-2'],
      } only %}
    {% endif %}
    {% if updated_on %}
      <div class="morsel__date">
        <strong>Updated:</strong> <time datetime="{{ updated_on }}">{{ updated_on }}</time>
      </div>
    {% elseif posted_on %}
      <div class="morsel__date">
        <div class="sr-only">Posted on</div>
        <time datetime="{{ posted_on }}">{{ posted_on }}</time>
      </div>
    {% endif %}
    <div class="morsel__heading">
      {% include "@components/heading/heading.twig" with {
        url: url,
        level: 2,
        text: heading
      } only %}
    </div>
    {% if text %}
      <p class="morsel__text">{{ text }}</p>
    {% endif %}
  </div>
</div>
